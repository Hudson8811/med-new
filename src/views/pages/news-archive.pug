					.long-form-inputs
						.long-form-inp
							input(type="text" placeholder="Ваше имя")
						.long-form-inp
							input(type="text" placeholder="Телефон")
						.long-form-inp
							input(type="text" placeholder="E-mail")
						.long-form-inp
							input(type="text" placeholder="Название организации")
						.long-form-inp
							input(type="text" placeholder="Город")
						.long-form-inp
							button.simple-small-btn(type="submit") Отправить
								.simple-small-btn__icon
									img(src="/img/svg/submit-btn-arrow.svg", alt="")

					.long-form-bottom